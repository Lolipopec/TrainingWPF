<Page x:Class="TrainingWPF.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="white"
      Title="Autorization">

    <Grid Background="#2d2e30">
        <StackPanel Grid.Row="1">
            <TextBlock   HorizontalAlignment="Center">Страница для авторизации</TextBlock>

            <StackPanel>

                <GroupBox  Header="Логин">
                    <TextBox Name="tblog" Text="gerasimov"></TextBox>
                </GroupBox>

                <GroupBox  Header="Введите пароль">
                    <PasswordBox Name="tbpass" Password="22!Aaaaa"></PasswordBox>
                    
                </GroupBox>


                <StackPanel>
                    <Button Name="btnAuth" Click="btnAuth_Click" Content="Авторизация"></Button>
                    <Button Name="btngoBack" Click="btngoBack_Click" Content="Назад"></Button>

                </StackPanel>
               

            </StackPanel>
         
            
        </StackPanel>
    
    </Grid>
</Page>
