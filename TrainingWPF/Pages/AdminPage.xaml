<Page x:Class="TrainingWPF.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrainingWPF"
      mc:Ignorable="d" 
      d:DesignHeight="350     " d:DesignWidth="450"
      Title="AdminPage">

    <Grid >
        <Grid.RowDefinitions>

            <RowDefinition Height="21*"></RowDefinition>
            <RowDefinition Height="162*"></RowDefinition>
            <RowDefinition Height="167*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Width="164">
            <Button x:Name="btnNext" Grid.Row="0" Click="btnNext_Click" Content="Авторизация" Margin="0 0 15 0"/>
            <Button x:Name="btnReg" Click="btnReg_Click" Content="Регистрация" />
        </StackPanel>



    </Grid>
</Page>
